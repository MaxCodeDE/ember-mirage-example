<center>
    <h1>Cool posts:</h1>
    <hr>
    {{#each model as |post|}}
        <p class="post-header">{{post.name}}</p>
        <p>Author: {{post.author}}</p>
        <p>Times read: {{post.timesRead}}</p>
        <p>{{if post.isEmberPost 'YEAH EMBER!' 'Ember where are you?'}}</p>
        <p class="comments-header">Comments</p>
        {{#each post.comments as |comment|}}
            <p><b>{{comment.from}}:</b> {{comment.text}}</p><br>
        {{else}}
            <p>No comments..</p>
        {{/each}}
        <hr>
    {{else}}
        <p>No posts yet :C</p>
    {{/each}}
</center>